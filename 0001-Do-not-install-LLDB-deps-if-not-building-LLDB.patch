Subject: [PATCH 1/1] Do not install LLDB deps if not building LLDB

---
 base_builders.py | 4 +++-
 1 file changed, 3 insertions(+), 1 deletion(-)

diff --git a/base_builders.py b/base_builders.py
index e5659bb..ffb622e 100644
--- a/base_builders.py
+++ b/base_builders.py
@@ -660,7 +660,9 @@ class LLVMBuilder(LLVMBaseBuilder):
 
     def install_config(self) -> None:
         super().install_config()
-        self._install_lldb_deps()
+
+        if self.build_lldb:
+            self._install_lldb_deps()
 
     @functools.cached_property
     def installed_toolchain(self) -> toolchains.Toolchain:
